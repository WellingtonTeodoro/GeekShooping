@model IEnumerable<GeekShooping.Web.Models.ProductModel>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row" pb-2>
        <div class="col-10">
            <h1 class="text-primary">Listagem de Produtos</h1>
        </div>  
        <div class="col" text-end pt-1>
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Criar Novo Produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead></thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Preço
                </th>
            </tr>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="col-4">
                        @item.Name
                    </td>
                    <td class="col-3">
                        @item.CategoryName
                    </td>
                    <td class="col-3">
                        @((item.Price).ToString("c"))
                    </td>
                    <td class="col-2">
                        <a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            } 
        </tbody>
    </table>
</div>